@model List<project.Models.ArticlePanier>

    @{
    ViewData["Title"] = "Mon Panier";
    }

    <div class="container py-5">
        <h1 class="mb-4" style="font-family: 'Playfair Display', serif; color: var(--gold);">Mon Panier</h1>

        @if (Model == null || !Model.Any())
    {
        <!-- Panier vide -->
        <div class="text-center py-5">
            <i class="bi bi-cart-x" style="font-size: 5rem; color: var(--gold); opacity: 0.5;"></i>
            <h3 class="mt-4" style="color: var(--gold-light);">Votre panier est vide</h3>
            <p style="color: var(--gold-light); opacity: 0.8;">Ajoutez des gâteaux pour commencer votre commande !</p>
            <a href="@Url.Action("Catalogue", "Gateau")" class="btn btn-primary mt-3">
                <i class="bi bi-arrow-left"></i> Retour au catalogue
            </a>
        </div>
    }
    else
    {
 <!-- Liste des produits -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card" style="background-color: rgba(15, 52, 58, 0.8); border: 1px solid rgba(212, 175, 55, 0.3);">
                    <div class="card-body">
                        <h5 class="card-title" style="color: var(--gold); font-family: 'Playfair Display', serif;">Produits</h5>

                        @foreach (var item in Model)
                        {
                            var prixBase = item.PrixBase;


                        <div class="panier-item mb-4 pb-3" style="border-bottom: 1px solid rgba(212, 175, 55, 0.2);"
                             data-gateau-id="@item.GateauId"
                             data-ancien-portions="@item.NombrePersonnes"
                             data-prix-base="@prixBase">

                            <div class="row align-items-center mb-3">
                                <!-- Image -->
                                <div class="col-md-2">
                                    <div style="background-color: rgba(245, 245, 220, 0.1); border-radius: 8px; padding: 10px; aspect-ratio: 1; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-image" style="font-size: 3rem; color: var(--gold); opacity: 0.3;"></i>
                                    </div>
                                </div>

                                <!-- Nom -->
                                <div class="col-md-4">
                                    <h6 style="color: var(--gold-light); font-weight: 600;">@item.NomGateau</h6>
                                </div>

                                <!-- Prix total -->
                                <div class="col-md-4 text-end">
                                    <p class="item-total-price" style="color: var(--gold); font-weight: 700; font-size: 1.4rem; margin: 0; font-family: 'Playfair Display', serif;">
                                        @string.Format("{0:C}", item.PrixUnitaire * item.Quantite)
                                    </p>
                                </div>

                                <!-- Supprimer -->
                                <div class="col-md-2 text-end">
                                    <form asp-controller="Panier" asp-action="Retirer" method="post" style="display: inline;">
                                        <input type="hidden" name="gateauId" value="@item.GateauId" />
                                        <input type="hidden" name="nombrePersonnes" value="@item.NombrePersonnes" />
                                        <button type="submit" class="btn btn-link p-0" style="color: #dc3545;">
                                            <i class="bi bi-x-circle" style="font-size: 1.8rem;"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <!-- Sélecteurs -->
                            <div class="row">
                                <div class="col-md-2"></div>
                                <div class="col-md-10">
                                    <div class="row align-items-center">
                                        <!-- Portions -->
                                        <div class="col-md-6">
                                            <label style="color: var(--gold-light); font-size: 0.9rem; margin-bottom: 0.3rem;">Portions :</label>
                                            <select class="form-select portions-select" style="background-color: rgba(15, 52, 58, 0.5); border: 1px solid rgba(212, 175, 55, 0.3); color: var(--gold-light);">
                                                @if (item.NombrePersonnes == 6)
                                                    {
                                                <option value="6" selected>6 portions (6.5")</option>
                                                    }
                                                    else
                                                    {
                                                <option value="6">6 portions (6.5")</option>
                                                    }

                                                @if (item.NombrePersonnes == 10)
                                                    {
                                                <option value="10" selected>10 portions (8")</option>
                                                    }
                                                    else
                                                    {
                                                <option value="10">10 portions (8")</option>
                                                    }

                                                @if (item.NombrePersonnes == 15)
                                                    {
                                                <option value="15" selected>15 portions (9")</option>
                                                    }
                                                    else
                                                    {
                                                <option value="15">15 portions (9")</option>
                                                    }

                                                @if (item.NombrePersonnes == 20)
                                                    {
                                                <option value="20" selected>20 portions (10")</option>
                                                    }
                                                    else
                                                    {
                                                <option value="20">20 portions (10")</option>
                                                    }

                                                @if (item.NombrePersonnes == 30)
                                                    {
                                                <option value="30" selected>30 portions (12")</option>
                                                    }
                                                    else
                                                    {
                                                <option value="30">30 portions (12")</option>
                                                    }
                                            </select>
                                        </div>

                                        <!-- Quantité -->
                                        <div class="col-md-6">
                                            <label style="color: var(--gold-light); font-size: 0.9rem; margin-bottom: 0.3rem;">Quantité :</label>
                                            <div class="d-flex align-items-center">
                                                <button type="button" class="btn btn-sm btn-outline-light btn-qty-minus" style="border-color: var(--gold-light); color: var(--gold-light);">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <input type="number" value="@item.Quantite" min="1" max="10" class="form-control text-center mx-2 qty-input" style="width: 60px; background-color: rgba(15, 52, 58, 0.5); border: 1px solid rgba(212, 175, 55, 0.3); color: var(--gold-light);" />
                                                <button type="button" class="btn btn-sm btn-outline-light btn-qty-plus" style="border-color: var(--gold-light); color: var(--gold-light);">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>

                <a href="@Url.Action("Catalogue", "Gateau")" class="btn btn-outline-secondary mt-3">
                    <i class="bi bi-arrow-left"></i> Continuer mes achats
                </a>
            </div>

            <!-- Récapitulatif -->
            <div class="col-lg-4">
                <div class="card" style="background-color: rgba(15, 52, 58, 0.8); border: 1px solid rgba(212, 175, 55, 0.3);">
                    <div class="card-body">
                        <h5 style="color: var(--gold); font-family: 'Playfair Display', serif; margin-bottom: 1.5rem;">Récapitulatif</h5>

                        <div class="d-flex justify-content-between mb-2" style="color: var(--gold-light);">
                            <span>Sous-total (<span id="totalArticles">@Model.Sum(p => p.Quantite)</span> articles)</span>
                            <span id="sousTotal" style="font-weight: 600;">@string.Format("{0:C}", Model.Sum(p => p.PrixUnitaire * p.Quantite))</span>
                        </div>

                        <hr style="border-color: rgba(212, 175, 55, 0.3); margin: 1.5rem 0;">

                        <div class="d-flex justify-content-between mb-4" style="color: var(--gold); font-size: 1.8rem; font-weight: 700; font-family: 'Playfair Display', serif;">
                            <span>Total</span>
                            <span id="totalGeneral">@string.Format("{0:C}", Model.Sum(p => p.PrixUnitaire * p.Quantite))</span>
                        </div>

                        <form asp-controller="Commande" asp-action="Valider" method="post" id="validerCommandeForm">
                            <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                                <i class="bi bi-check-circle"></i> Valider la commande
                            </button>
                        </form>

                        <p class="text-center mb-0" style="color: var(--gold-light); font-size: 0.85rem; opacity: 0.8;">
                            <i class="bi bi-info-circle"></i> Préavis de 24 heures requis
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Fonction pour mettre à jour le panier côté serveur
            function updatePanierServer(gateauId, ancienPortions, nouveauPortions, quantite) {
                fetch('/Panier/MettreAJourAjax', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        gateauId: gateauId,
                        ancienNombrePersonnes: ancienPortions,
                        nombrePersonnes: nouveauPortions,
                        quantite: quantite
                    })
                });
            }

            // Recalculer les prix
            function recalculerPrix() {
                let totalGeneral = 0;
                let totalArticles = 0;

                document.querySelectorAll('.panier-item').forEach(item => {
                    const prixBase = parseFloat(item.dataset.prixBase);
                    const portions = parseInt(item.querySelector('.portions-select').value);
                    const quantite = parseInt(item.querySelector('.qty-input').value);

                    const ratios = {
                        6: 1,
                        10: 1.6,
                        15: 2.4,
                        20: 3.2,
                        30: 4.8
                    };
                    const prixUnitaire = prixBase * (ratios[portions] || portions / 6);
                    const prixTotal = prixUnitaire * quantite;

                    item.querySelector('.item-total-price').textContent = prixTotal.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR' });

                    totalGeneral += prixTotal;
                    totalArticles += quantite;
                });

                document.getElementById('sousTotal').textContent = totalGeneral.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR' });
                document.getElementById('totalGeneral').textContent = totalGeneral.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR' });
                document.getElementById('totalArticles').textContent = totalArticles;
            }

            // Gestion changement portions
            document.querySelectorAll('.portions-select').forEach(select => {
                select.addEventListener('change', function () {
                    const item = this.closest('.panier-item');
                    const gateauId = parseInt(item.dataset.gateauId);
                    const ancienPortions = parseInt(item.dataset.ancienPortions);
                    const nouveauPortions = parseInt(this.value);
                    const quantite = parseInt(item.querySelector('.qty-input').value);

                    item.dataset.ancienPortions = nouveauPortions;
                    recalculerPrix();
                    updatePanierServer(gateauId, ancienPortions, nouveauPortions, quantite);
                });
            });

            // Gestion changement quantité
            document.querySelectorAll('.qty-input').forEach(input => {
                input.addEventListener('change', function () {
                    const item = this.closest('.panier-item');
                    const gateauId = parseInt(item.dataset.gateauId);
                    const portions = parseInt(item.querySelector('.portions-select').value);
                    const quantite = parseInt(this.value);

                    recalculerPrix();
                    updatePanierServer(gateauId, portions, portions, quantite);
                });
            });

            // Boutons + et -
            document.querySelectorAll('.btn-qty-minus').forEach(btn => {
                btn.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('.qty-input');
                    if (parseInt(input.value) > 1) {
                        input.value = parseInt(input.value) - 1;
                        input.dispatchEvent(new Event('change'));
                    }
                });
            });

            document.querySelectorAll('.btn-qty-plus').forEach(btn => {
                btn.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('.qty-input');
                    if (parseInt(input.value) < 10) {
                        input.value = parseInt(input.value) + 1;
                        input.dispatchEvent(new Event('change'));
                    }
                });
            });
        });
    </script>
