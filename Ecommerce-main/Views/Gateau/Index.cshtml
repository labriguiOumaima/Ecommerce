@model List<project.Models.Gateau>

    @{
    ViewData["Title"] = "Cake Shop - Gâteaux sur Mesure";
    }

    <style>
        .hero-section {
            min-height: 80vh;
            display: flex;
            align-items: center;
            padding: 4rem 0;
        }

        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            font-weight: 400;
            color: var(--gold);
            line-height: 1.2;
            margin-bottom: 1.5rem;
            letter-spacing: 3px;
        }

        .hero-subtitle {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.1rem;
            font-weight: 300;
            color: var(--gold-light);
            letter-spacing: 1px;
            max-width: 500px;
            line-height: 1.8;
        }

        .hero-image {
            max-width: 100%;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 20px 60px rgba(212, 175, 55, 0.3);
        }

        .hero-placeholder {
            height: 450px;
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(212, 175, 55, 0.05) 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px dashed rgba(212, 175, 55, 0.3);
        }

        .products-section {
            padding: 5rem 0;
            background: linear-gradient(135deg, #0a3842 0%, var(--teal-dark) 100%);
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            color: var(--gold);
            font-size: 3.5rem;
            font-weight: 400;
            letter-spacing: 4px;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .section-subtitle {
            color: var(--gold-light);
            font-size: 1.1rem;
            opacity: 0.8;
            text-align: center;
            margin-bottom: 4rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Product Cards */
        .product-card {
            background: rgba(15, 52, 58, 0.6);
            border: 2px solid rgba(212, 175, 55, 0.3);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.4s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .product-card:hover {
                transform: translateY(-10px);
                border-color: var(--gold);
                box-shadow: 0 20px 60px rgba(212, 175, 55, 0.3);
            }

        .product-card-image {
            width: 100%;
            height: 400px;
            overflow: hidden;
            position: relative;
        }

            .product-card-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

        .product-card:hover .product-card-image img {
            transform: scale(1.1);
        }

        .product-card-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(212, 175, 55, 0.05) 100%);
        }

        .product-card-content {
            padding: 3rem 2.5rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .product-card-title {
            font-family: 'Playfair Display', serif;
            color: var(--gold);
            font-size: 2.2rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            letter-spacing: 2px;
        }

        .product-card-description {
            color: var(--gold-light);
            font-size: 1.05rem;
            line-height: 1.8;
            margin-bottom: 2.5rem;
            flex-grow: 1;
        }

        .product-card-button {
            background-color: var(--gold);
            color: var(--teal-dark);
            border: none;
            padding: 1rem 2.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-size: 0.95rem;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            width: fit-content;
        }

            .product-card-button:hover {
                background-color: var(--gold-light);
                color: var(--teal-dark);
                transform: translateX(5px);
            }

        @@media (max-width: 991px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .section-title {
                font-size: 2.5rem;
            }

            .product-card {
                margin-bottom: 2rem;
            }

            .product-card-image {
                height: 300px;
            }
        }
    </style>

    <div class="container-fluid px-4">
        <!-- Hero Section -->
        <div class="hero-section">
            <div class="row align-items-center w-100">
                <div class="col-lg-6">
                    <h1 class="hero-title">
                        WE WILL BRING<br>
                        YOUR IDEAS TO LIFE
                    </h1>
                    <p class="hero-subtitle">
                        Step into a world of mouthwatering confections that will make your celebrations truly unforgettable
                    </p>
                    <a href="#custom-section" class="btn btn-primary btn-lg mt-4" style="padding: 1rem 2.5rem; font-size: 1rem; letter-spacing: 2px;">
                        Custom Made
                    </a>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="/images/hero-cake.png" alt="Wedding Cake" class="hero-image" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                    <div class="hero-placeholder" style="display: none;">
                        <i class="bi bi-cake2" style="font-size: 10rem; color: rgba(212, 175, 55, 0.3);"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <section class="products-section">
        <div class="container">
            <h2 class="section-title">OUR PRODUCTS</h2>
            <p class="section-subtitle">
                We will listen to all your wishes, pay attention to important little things and bring your ideas to life
            </p>

            <div class="row g-4">
                <!-- CUSTOM MADE Card -->
                <div class="col-lg-6" id="custom-section">
                    <div class="product-card">
                        <div class="product-card-image">
                            <img src="/images/custom-main.jpg" alt="Custom Cake" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="product-card-placeholder" style="display: none;">
                                <i class="bi bi-palette" style="font-size: 5rem; color: var(--gold); opacity: 0.4;"></i>
                            </div>
                        </div>
                        <div class="product-card-content">
                            <h3 class="product-card-title">CUSTOM MADE</h3>
                            <p class="product-card-description">
                                Créez le gâteau de vos rêves selon vos envies. Notre équipe transformera vos idées en une œuvre d'art comestible, avec une attention particulière aux détails et une qualité exceptionnelle.
                            </p>
                            <a href="mailto:contact@cakeshop.com" class="product-card-button">
                                Contactez-nous <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- SHOP Card -->
                <div class="col-lg-6">
                    <div class="product-card">
                        <div class="product-card-image">
                            @if (Model != null && Model.Any())
                        {
                            var firstGateau = Model.First();
                            if (!string.IsNullOrEmpty(firstGateau.ImageUrl))
                            {
                            <img src="@firstGateau.ImageUrl" alt="@firstGateau.Nom">
                            }
                            else
                            {
                            <div class="product-card-placeholder">
                                <i class="bi bi-shop" style="font-size: 5rem; color: var(--gold); opacity: 0.4;"></i>
                            </div>
                            }
                        }
                        else
                        {
                            <div class="product-card-placeholder">
                                <i class="bi bi-shop" style="font-size: 5rem; color: var(--gold); opacity: 0.4;"></i>
                            </div>
                        }
                        </div>
                        <div class="product-card-content">
                            <h3 class="product-card-title">SHOP</h3>
                            <p class="product-card-description">
                                Découvrez notre sélection de délicieux gâteaux prêts à commander. Des créations uniques qui raviront vos papilles et émerveilleront vos invités pour toutes vos occasions spéciales.
                            </p>
                            <a href="@Url.Action("Catalogue", "Gateau")" class="product-card-button">
                                Voir le catalogue <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
