@model List<project.Models.Gateau>

@{
    ViewData["Title"] = "Gâteaux Disponibles";
}

<style>
    .hero-section {
        min-height: 60vh;
        display: flex;
        align-items: center;
        padding: 4rem 0;
    }
    
    .hero-title {
        font-family: 'Playfair Display', serif;
        font-size: 4rem;
        font-weight: 900;
        color: var(--gold);
        line-height: 1.1;
        margin-bottom: 1.5rem;
    }
    
    .hero-title .initial {
        font-size: 5rem;
        display: inline-block;
    }
    
    .hero-subtitle {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.1rem;
        font-weight: 300;
        color: var(--gold-light);
        letter-spacing: 1px;
        max-width: 500px;
    }
    
    .gateau-card {
        background: rgba(212, 175, 55, 0.05);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 8px;
        transition: all 0.3s;
        color: var(--gold-light);
    }
    
    .gateau-card:hover {
        transform: translateY(-8px);
        border-color: var(--gold);
        box-shadow: 0 8px 24px rgba(212, 175, 55, 0.15);
    }
    
    .gateau-title {
        font-family: 'Playfair Display', serif;
        color: var(--gold);
        font-size: 1.5rem;
        font-weight: 700;
    }
    
    .gateau-price {
        font-family: 'Playfair Display', serif;
        color: var(--gold);
        font-size: 1.8rem;
        font-weight: 700;
    }
    
    .badge-custom {
        background-color: rgba(212, 175, 55, 0.2);
        color: var(--gold);
        border: 1px solid rgba(212, 175, 55, 0.4);
        padding: 0.4rem 0.8rem;
        font-size: 0.75rem;
        letter-spacing: 1px;
        text-transform: uppercase;
    }
    
    .btn-custom {
        background-color: var(--gold);
        color: var(--teal-dark);
        border: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 0.6rem 1.5rem;
        transition: all 0.3s;
    }
    
    .btn-custom:hover {
        background-color: var(--gold-light);
        color: var(--teal-dark);
        transform: scale(1.05);
    }
</style>

<div class="container-fluid px-4">
    <div class="hero-section">
        <div class="row align-items-center w-100">
            <div class="col-lg-6">
                <h1 class="hero-title">
                    <span class="initial">N</span>OUS DONNONS VIE<br>
                    À VOS IDÉES
                </h1>
                <p class="hero-subtitle">
                    Découvrez un monde de confiseries exquises qui rendront vos célébrations véritablement inoubliables
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <div style="height: 400px; background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(212, 175, 55, 0.05) 100%); border-radius: 20px; display: flex; align-items: center; justify-content: center; border: 2px dashed rgba(212, 175, 55, 0.3);">
                    <i class="bi bi-cake" style="font-size: 8rem; color: rgba(212, 175, 55, 0.3);"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <h2 class="text-center mb-4" style="font-family: 'Playfair Display', serif; color: var(--gold); font-size: 2.5rem;">Notre Sélection</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var gateau in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="gateau-card h-100 p-4">
                        <div class="d-flex flex-column h-100">
                            <h5 class="gateau-title mb-3">@gateau.Nom</h5>
                            <p class="flex-grow-1 mb-3" style="color: var(--gold-light); opacity: 0.9;">@gateau.Description</p>
                            <div class="mt-auto">
                                <div class="mb-3">
                                    <span class="badge-custom me-2">@gateau.Categorie</span>
                                   
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="gateau-price">@gateau.Prix.ToString("C")</span>
                                    <a href="@Url.Action("Details", "Gateau", new { id = gateau.Id })" class="btn btn-custom btn-sm">
                                        Détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4 style="font-family: 'Playfair Display', serif; color: var(--gold);">Aucun gâteau disponible</h4>
            <p style="color: var(--gold-light); opacity: 0.8;">Il n'y a actuellement aucun gâteau en stock. Revenez plus tard !</p>
        </div>
    }
</div>

